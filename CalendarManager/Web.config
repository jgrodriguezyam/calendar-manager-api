<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <configSections>
    <section name="AllowedFileExtensions" type="CalendarManager.Infrastructure.Files.ElementConfigs.FileConfigSection" />
  </configSections>

  <AllowedFileExtensions>
    <extension name="jpg">
      <signature hex="FF D8 FF E0" />
    </extension>
    <extension name="jpeg">
      <signature hex="FF D8 FF E0" />
    </extension>
    <extension name="png">
      <signature hex="89 50 4E 47 0D 0A 1A 0A" />
    </extension>
    <extension name="pdf">
      <signature hex="25 50 44 46" />
    </extension>
    <extension name="mp4">
      <signature hex="00 00 00 1C 66 74 79 70" />
      <signature hex="4D 53 4E 56 01 29 00 46" />
      <signature hex="4D 53 4E 56 6D 70 34 32" />
    </extension>
  </AllowedFileExtensions>

  <connectionStrings>
    <add name="ConnectionStringCalendarManager" connectionString="Server=JRODRIGUEZ-PC\SQLEXPRESS; Database=CalendarManager; User Id=sa; Password=desarrollo;" providerName="System.Data.SqlClient" />
  </connectionStrings>
  
  <appSettings>
    <clear />
    <add key="ContentMultimedia" value="/Content/Multimedia/" />
    <add key="MaximumFileSize" value="5000" />
    <add key="Serial" value="FepUxYC4uc7auEgIOz2sQg5vtiy8dcHt" />
    <!--Smtp Configuration-->
    <add key="SmtpHost" value="https://email.xxxxx.com/ews/Exchange.asmx" />
    <add key="UserName" value="jrodriguezy" />
    <add key="Password" value="xxxxx" />
  </appSettings>
  
  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <customErrors mode="Off" />
    <httpRuntime targetFramework="4.5" maxRequestLength="95194304" />
    <globalization culture="es-MX" uiCulture="es-MX" />
  </system.web>
  
  <system.webServer>
    <validation validateIntegratedModeConfiguration="false" />
    <modules runAllManagedModulesForAllRequests="true">
      <remove name="WebDAVModule" />
    </modules>
    
    <handlers>
      <remove name="WebDAV" />
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
      <add name="HelpPageHandler" path="/" verb="*" type="CalendarManager.Handlers.HelpPageHandler" />
      <add name="SwashbuckleUiHandler" verb="*" path="swagger/ui/*" type="Swashbuckle.Application.SwaggerUiHandler, Swashbuckle.Core" preCondition="managedHandler" />
    </handlers>
  </system.webServer>
  
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Mvc" publicKeyToken="31bf3856ad364e35" />
        <bindingRedirect oldVersion="1.0.0.0-5.2.3.0" newVersion="5.2.3.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Helpers" publicKeyToken="31bf3856ad364e35" />
        <bindingRedirect oldVersion="1.0.0.0-3.0.0.0" newVersion="3.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.WebPages" publicKeyToken="31bf3856ad364e35" />
        <bindingRedirect oldVersion="1.0.0.0-3.0.0.0" newVersion="3.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Owin" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.0.1.0" newVersion="3.0.1.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Cors" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-5.2.3.0" newVersion="5.2.3.0" />
